print("Welcome to Cactus OS!")
print("The installer will now begin to run...")
print("---------------------------------------")
textutils.slowPrint("Deleting pre-existing files")
shell.run("delete","startup")
shell.run("delete","os")
shell.run("delete","uninstall")
shell.run("delete",".menu")
shell.run("delete","back")
shell.run("delete",".command")
shell.run("delete",".programs")
shell.run("delete","GetKeyCode")
--shell.run("delete","*") -- Edit Later with all COS PROGS.
print("---------------------------------------")
sleep(1)
textutils.slowPrint("Installing new files...")
shell.run("cp","disk/os/os/.menu",".menu")
shell.run("cp","disk/os/os","os")
shell.run("cp","disk/os/Calculator","Calculator")
shell.run("cp","disk/os/startup","startup")
shell.run("cp","disk/os/back","back")
shell.run("cp","disk/os/os/.command",".command")
shell.run("cp","disk/os/os/.programs",".programs")
shell.run("cp","disk/os/CactusOSWord","CactusOSWord")
shell.run("cp","disk/os/GetKeyCode","GetKeyCode")
shell.run("cp","disk/os/archive","archive")
shell.run("cp","disk/os/mailclient","mailclient")
shell.run("cp","disk/os/pref","pref") --Edit Later with all programs.
textutils.slowPrint("Note: After you install Cactus OS, you will need to edit the 'pref' file in the system so that it matches the mailserver id.")
print("---------------------------------------")
disk.eject("top")
disk.eject("bottom")
disk.eject("left")
disk.eject("right")
disk.eject("front")
disk.eject("back")
textutils.slowPrint("Cactus OS will now reboot...")
sleep(1)
os.reboot()